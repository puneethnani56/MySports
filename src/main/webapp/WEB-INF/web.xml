<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="3.1">
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.mysports.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.mysports.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
  <servlet-name>ProductServlet</servlet-name>
  <servlet-class>com.mysports.ProductServlet</servlet-class>
  <load-on-startup>1</load-on-startup>
</servlet>

<servlet-mapping>
  <servlet-name>ProductServlet</servlet-name>
  <url-pattern>/store</url-pattern>
</servlet-mapping>

<servlet>
  <servlet-name>AppServlet</servlet-name>
  <servlet-class>com.mysports.AppServlet</servlet-class>
</servlet>

<servlet-mapping>
  <servlet-name>AppServlet</servlet-name>
  <url-pattern>/add</url-pattern>
</servlet-mapping>

<welcome-file-list>
  <welcome-file>redirect.jsp</welcome-file>
</welcome-file-list>

</web-app>
